<html>
<head>
</head>
<body>
<?php
require_once '/src/IndexController.php';
require_once '/src/FightController.php';
$action = isset ( $_GET ['action'] ) ? $_GET ['action'] : 'index';
$controller = null;
switch ($action) {
	case 'index' :
		$controller = new IndexController ();
		break;
	case 'fight' :
		$controller = new FightController ();
		break;
}
if ($controller !== null) {
	$controller->execute ();
}
?> 
</body>
</html>